@using Website_KĐCLGD.Models;
@model IEnumerable<Website_KĐCLGD.Models.VW_TIEUCHI_MINHCHUNG>
@{
    ViewBag.Title = "TieuChuanTieuChiMinhChung";
    Layout = "~/Views/shared/layout_web.cshtml";
}
<div class="section-4" style="background: #eee">
    <div id="panner" class="carousel slide" data-ride="carousel">
        @{Html.RenderPartial("~/Views/slider/panner_header.cshtml");}
    </div>
    <div class="container">
        <div class="row ">
            <div class="col-md-3">
                @{Html.RenderPartial("~/Views/partital/Menu_BC.cshtml");}
            </div>
            <div class="col-md-9">
                <div class="heading wow pulse" style="margin-bottom: -1rem; margin-top: 1rem;">
                    <h2 style="font-weight: 700;">DANH MỤC MINH CHỨNG</h2>
                </div>
                <table class="table table-striped " style="font-size: 15px">
                    <thead class="table-dark" style="font-weight:600">
                        <tr>
                            <td>STT</td>
                            <td>TIÊU ĐỀ</td>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var index = 1;
                            foreach (var item in Model)
                            { 
                            <tr>
                                <td>@index</td>
                                <td>
                                    <div class="btn-xem">
                                        <div style="cursor:pointer;" onclick="document.getElementById('@item.MAMINHCHUNG').style.display='block'">@item.TENMINHCHUNG</div>
                                        <div id="@item.MAMINHCHUNG" class="modal">
                                            <div class="modal-content">
                                                <span onclick="document.getElementById('@item.MAMINHCHUNG').style.display='none'" class="close" title="Đóng">×</span>
                                                <div style="background-color: #f1f1f1; position: absolute; left: 0; right: 0; transform: translateY(-10%);">
                                                    <iframe src="@item.DUONGDAN_ND"  width="100%" height="480"></iframe>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                                index++;
                            }   
                        }
                    </tbody>
                </table>
                <p style="font-family: 'Times New Roman'; font-size: 18px">
                    <br />
                    * Download file Hồ sơ kiểm định   
                    <a href="https://drive.google.com/u/0/uc?id=18W7vjTgr8dFgnrSWZS9Ob71fUvquotwq&export=download" download="" class="fa fa-download">TẠI ĐÂY.</a>
                </p>
                <div id="fb-root"></div>
                <script async defer crossorigin="anonymous" src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v9.0" nonce="GQIwkbMY"></script>
                <div id="comment_fb">
                    <div class="fb-comments" data-href="https://vn.fifaaddict.com/fo4db/pidbgqdrrzma" data-width="800" data-numposts="5" style="margin-top: 100px;"></div>
                </div>
            </div>
        </div>
    </div>

</div>




