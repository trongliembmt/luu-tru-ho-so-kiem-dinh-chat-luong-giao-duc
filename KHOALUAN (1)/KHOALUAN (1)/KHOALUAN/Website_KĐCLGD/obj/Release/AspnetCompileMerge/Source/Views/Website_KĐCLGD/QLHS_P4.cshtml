@using Website_KĐCLGD.Models;
@{
    ViewBag.Title = "QLHS_P4";
    Layout = "~/Views/shared/layout_web.cshtml";
    List<KQ_DANHGIA_PHAN4> listDG_4 = (List<KQ_DANHGIA_PHAN4>)ViewData["listDG_4"];
    List<KQ_KIEMDUYET_PHAN4> listKD_4 = (List<KQ_KIEMDUYET_PHAN4>)ViewData["listKD_4"];
}
<div class="section-4" style="background:#eee">
    <div id="panner" class="carousel slide" data-ride="carousel">

  @{Html.RenderPartial("~/Views/slider/panner_header.cshtml");}
  
</div>
    <div class="container">
        <div class="row ">
            <div class="col-lg-12">
                @{Html.RenderPartial("~/Views/partital/MenuChucNang.cshtml");}
                <br>
            </div>
        </div>
        <div class="row ">
            <div class="col-md-3" >
                @{Html.RenderPartial("~/Views/partital/MenuBC(4phan).cshtml");}
            </div>
            <div class="col-md-9" >
                @{Html.RenderPartial("~/Views/partital/ComboBox_QLHS.cshtml");}
                <div class="heading wow pulse" style="margin-bottom: -1rem;margin-top: 1rem;">
			        <h2 style="font-weight:700; font-size:25px;">KẾT QUẢ KIỂM DUYỆT PHẦN 4</h2>
		        </div>
                 <table class="table table-striped "style="font-size:15px">
                        <thead class="table-dark" style="font-weight:600">
                            <tr>
                                <td>LẦN</td>
                                <td>TRẠNG THÁI</td>
                                <td>Ý KIẾN CHỈNH SỬA</td>
                                <td>NGÀY KIỂM DUYỆT</td>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var index1 = 1;
                                foreach (KQ_KIEMDUYET_PHAN4 item in listKD_4)
                                { 
                                <tr>
                                    <td>@index1</td>
                                    <td>@item.TINHTRANG</td>
                                    <td>@item.GHICHU</td>
                                    <td>@item.NGAYKD</td>
                                </tr>
                                    index1++;
                                }   
                            }
                        </tbody>
                    </table>
                <br />
                <div class="heading wow pulse" style="margin-bottom: -1rem;margin-top: 1rem;">
			        <h2 style="font-weight:700;font-size:25px;">KẾT QUẢ ĐÁNH GIÁ PHẦN 4</h2>
		        </div>
                <div class="alert-box warning"><span> <img src="~/Content/image/panner/warning.png"  style="width:2.5%; margin-left:-25px;"/>   CHÚ Ý: </span>Lần 1-3: Đánh giá cấp Khoa - Lần 4-6: Đánh giá cấp Trường - Lần 7-9: Đánh giá Ngoài</div>

                 <table class="table table-striped "style="font-size:15px">
                        <thead class="table-dark" style="font-weight:600">
                            <tr>
                                <td>LẦN</td>
                                <td>ĐIỂM</td>
                                <td>Ý KIẾN ĐÓNG GÓP</td>
                                <td>NGÀY ĐÁNH GIÁ</td>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var index = 1;
                                foreach (KQ_DANHGIA_PHAN4 item in listDG_4)
                                { 
                                <tr>
                                    <td>@index</td>
                                    <td>@item.DIEM_DG</td>
                                    <td>@item.GHICHU</td>
                                    <td>@item.NGAYDG</td>
                                </tr>
                                    index++;
                                }   
                            }
                        </tbody>
                    </table>
                <br />
                <div class="heading wow pulse" style="margin-bottom: -1rem;margin-top: 1rem;">
			        <h2 style="font-weight:700;font-size:25px;">CHỈNH SỬA BÁO CÁO PHẦN 4</h2>
		        </div>
                <div>
                    <iframe src="https://docs.google.com/document/d/1rsOWTKfOHykEz_KHX_fcWrk6PLOGY4OwSRxkpPAl3D8/edit" width="100%" height="1000px"></iframe>
                </div> 
                <div class="btn-luu" style="text-align:center;"><button class="btn gopy" onclick="tai_lai_trang()">Lưu</button></div>
                
            </div>
        </div>
    </div>
</div>
<script>
    function tai_lai_trang() {
        location.reload();
    }
</script>


