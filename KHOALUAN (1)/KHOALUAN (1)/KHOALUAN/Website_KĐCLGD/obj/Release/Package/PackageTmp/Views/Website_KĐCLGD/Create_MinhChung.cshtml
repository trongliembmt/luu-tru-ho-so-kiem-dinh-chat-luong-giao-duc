@using Website_KĐCLGD.Models;
@{
    ViewBag.Title = "Create_MinhChung";
    Layout = "~/Views/shared/layout_web1.cshtml";
    //List<TIEUCHI> lstTieuChi = (List<TIEUCHI>)ViewData["lstTieuChi"];
    TIEUCHI tc = ViewData["lstTieuChi"] as TIEUCHI;
}


<div class="section-4" style="background: #eee">
    <div id="panner" class="carousel slide" data-ride="carousel">

        @{Html.RenderPartial("~/Views/slider/panner_header.cshtml");}

    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                @{Html.RenderPartial("~/Views/partital/MenuChucNang.cshtml");}
                <br>
            </div>
        </div>
        <div class="row ">
            <div class="container">
                @using (Html.BeginForm("Create_MinhChung", "Website_KĐCLGD", FormMethod.Post))
                {
                    <fieldset  class="was-validated">
                        <div class="heading wow pulse" style="margin-top: 10px;">
                            <h2><b>THÊM MỚI MINH CHỨNG</b></h2>
		                    </div>
                        <div class="form-group">
                            <label for="uname" style="font-size: 18px">MÃ MINH CHỨNG</label>
                            <input type="text" class="form-control" id="MAMINHCHUNG" name="MAMINHCHUNG" style="font-size: 14px" required />
                            <div class="valid-feedback">Có hiệu lực.</div>
                            <div class="invalid-feedback">Vui lòng điền vào trường này.</div>
                        </div>
                        <div class="form-group">
                            <label for="uname" style="font-size: 18px">TÊN MINH CHỨNG</label>
                            <input type="text" class="form-control" id="TENMINHCHUNG" name="TENMINHCHUNG" style="font-size: 14px" required />
                            <div class="valid-feedback">Có hiệu lực.</div>
                            <div class="invalid-feedback">Vui lòng điền vào trường này.</div>
                        </div>
                        <div class="form-group">
                            <label for="uname" style="font-size: 18px">ĐƯỜNG DẪN NỘI DUNG</label>
                            <input type="text" class="form-control" id="DUONGDAN_ND" name="DUONGDAN_ND" style="font-size: 14px" required />
                            <div class="valid-feedback">Có hiệu lực.</div>
                            <div class="invalid-feedback">Vui lòng điền vào trường này.</div>
                            <input type="text" name="matieuchi" value="@tc.MATIEUCHI" hidden />
                        </div>
                        <label for="uname" style="font-size: 18px">THUỘC TIÊU CHÍ</label>
                        <textarea style="font-size: 14px;" class="form-control" disabled="disabled">@tc.TIEUDETIEUCHI.ToString().Trim() </textarea>
                        <br />
                        <div class="btn-luu" style="text-align:center; margin-top:15px"><button class="btn gopy" type="submit" style="width:60px">Lưu </button></div> 
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>
