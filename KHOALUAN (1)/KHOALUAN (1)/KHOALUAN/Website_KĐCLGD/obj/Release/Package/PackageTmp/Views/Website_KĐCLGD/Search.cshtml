@{
    ViewBag.Title = "Search";
    Layout = "~/Views/shared/layout_web.cshtml";
}

<div class="section-4" style="background:#eee">
    <div id="panner" class="carousel slide" data-ride="carousel">
         @{Html.RenderPartial("~/Views/slider/panner_header.cshtml");}
    </div>
    <div class="container">
        <div class="row ">
             <div class="col-md-3" >
                @{Html.RenderPartial("~/Views/partital/Menu_BC.cshtml");}
            </div>
            <div class="col-md-9" >
                <div class="heading wow pulse" style="margin-bottom: -1rem;margin-top: 1rem;">
			        <h2 style="font-weight:700">KẾT QUẢ TÌM KIẾM @ViewBag.header</h2>
		        </div>
        <table class="table table-striped "style="font-size:15px">
            <thead class="table-dark">
                <tr>
                    <td>STT</td>
                    <td>TIÊU ĐỀ</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>

                @{
                    if (ViewBag.dsTieuChuan != null)
                    {
                        var dsTieuChuan = ViewBag.dsTieuChuan;
                        var index = 1;
                        foreach (var item in dsTieuChuan)
                        {
                            <tr>
                                <td>@index</td>
                                <td colspan="2">
                                    <a style="text-decoration:none !important" href="@Url.Action("DM_TieuChi", "Website_KĐCLGD", new { matieuchuan = @item.MATIEUCHUAN })">@item.TIEUDETIEUCHUAN</a>
                                </td>
                            </tr>
                            index++;
                        }
                    }
                    else if (ViewBag.dsTieuChi != null)
                    {
                        var index = 1;
                        var dsTieuChi = ViewBag.dsTieuChi;
                        foreach (var item in dsTieuChi)
                        {
                            <tr>
                                <td>@index</td>
                                <td>
                                    <div class="btn-xem">
                                        <div style="cursor:pointer;" onclick="document.getElementById('@item.MATIEUCHI').style.display='block'"> @item.TIEUDETIEUCHI</div>
                                        <div id="@item.MATIEUCHI" class="modal">
                                            <div class="modal-content">
                                                <span onclick="document.getElementById('@item.MATIEUCHI').style.display='none'" class="close" title="Close Modal">×</span>
                                                <div style="background-color:#f1f1f1; position: absolute; left:0; right: 0; transform:translateY(-10%);">
                                                    <iframe src="@item.DUONGDAN_ND" width="100%" height="480"></iframe>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td><button type="button" class="btn btn-info"><a href="@Url.Action("TieuChuanTieuChiMinhChung", "Website_KĐCLGD", new { matieuchi = @item.MATIEUCHI })" style="color:#fff">Xem</a></button></td>
                            </tr>
                            index++;
                        }
                    }
                    else if (ViewBag.dsMinhChung != null)
                    {
                        var dsMinhChung = ViewBag.dsMinhChung;
                        var index = 1;
                        foreach (var item in dsMinhChung)
                        {
                            <tr>
                                <td>@index</td>
                                <td>
                                    <div class="btn-xem">
                                        <div style="cursor:pointer;" onclick="document.getElementById('@item.MAMINHCHUNG').style.display='block'">@item.TENMINHCHUNG</div>
                                        <div id="@item.MAMINHCHUNG" class="modal">
                                            <div class="modal-content">
                                                <span onclick="document.getElementById('@item.MAMINHCHUNG').style.display='none'" class="close" title="Đóng">×</span>
                                                <div style="background-color: #f1f1f1; position: absolute; left: 0; right: 0; transform: translateY(-10%);">
                                                    <iframe src="@item.DUONGDAN_ND" width="100%" height="480"></iframe>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            index++;
                        }
                    }
                }
            </tbody>
        </table>
            </div>
        </div>
    </div>
    
</div>
