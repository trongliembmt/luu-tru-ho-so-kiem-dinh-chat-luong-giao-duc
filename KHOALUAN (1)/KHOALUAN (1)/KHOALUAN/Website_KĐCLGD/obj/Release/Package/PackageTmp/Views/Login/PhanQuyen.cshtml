<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    function active(obj) {
        localStorage.obj = obj.innerHTML;
    }

    $(document).ready(function () {
        if (localStorage.hasOwnProperty('obj')) {
            var item = document.getElementsByClassName('nav-item');
            var len = item.length;
            var obj = localStorage.getItem('obj');
            var doc = new DOMParser().parseFromString(obj, "text/xml");
            for (var i = 0; i < len; i++) {
                item[i].classList.remove('active');
                if (item[i].firstElementChild.innerHTML == doc.firstElementChild.innerHTML) {
                    item[i].classList.add('active');
                }
            }
            localStorage.removeItem('obj');
        }
    })
</script>
