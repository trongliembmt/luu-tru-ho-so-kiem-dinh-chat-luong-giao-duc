@model Website_KĐCLGD.Models.NHANSU
@{
    ViewBag.Title = "Detail_NhanSu";
    Layout = "~/Views/shared/layout_web.cshtml";
}
<div class="section-4" style="background: #eee">
    <div id="panner" class="carousel slide" data-ride="carousel">
        @{Html.RenderPartial("~/Views/slider/panner_header.cshtml");}
    </div>
    <div class="container">
        <div class="row ">
            <div class="col-lg-12">
                @{Html.RenderPartial("~/Views/partital/MenuChucNang.cshtml");}
                <br>
            </div>
        </div>
        <div class="row ">
            <div class="col-md-12">
                <div class="heading wow pulse" style="margin-top: 10px;">
                    <h2><b>THÔNG TIN NHÂN SỰ</b></h2>
                </div>
                <img style="margin: 0 auto;display:block;max-width:150px" src="~/Content/image/user/@Model.HINHANH" id="image" />
                <div class="form-group" style="font-size: 20px">
                    <label for="formGroupExampleInput">TÊN NHÂN SỰ</label>
                    <input type="text" style="font-size:16px" class="form-control" value="@Model.TEN_NS" id="formGroupExampleInput" disabled>
                </div>
                <div class="form-group" style="font-size: 20px">

                    <div class="form-row">
                        <div class="col">
                            <label for="formGroupExampleInput2">SDT</label>
                            <input type="text" style="font-size:16px" class="form-control" value="@Model.SDT" id="formGroupExampleInput2"disabled>
                        </div>
                        <div class="col">
                            <label for="formGroupExampleInput2">EMAIL</label>
                            <input type="text" style="font-size:16px" class="form-control" value="@Model.EMAIL" id="formGroupExampleInput2"disabled>
                        </div>
                    </div>
                </div>
                <div class="form-group" style="font-size: 20px">
                    <label for="formGroupExampleInput">ĐỊA CHỈ</label>
                    <input type="text" style="font-size:16px" class="form-control" value="@Model.DIACHI" id="formGroupExampleInput" disabled>
                </div>
                <div class="form-group" style="font-size: 20px">

                    <div class="form-row">
                        <div class="col">
                            <label for="formGroupExampleInput2">GIỚI TÍNH</label>
                            <input type="text" style="font-size:16px" class="form-control" value="@Model.GIOITINH" id="formGroupExampleInput2"disabled>
                        </div>
                        <div class="col">
                            <label for="formGroupExampleInput2">NGÀY SINH</label>
                            <input type="text" style="font-size:16px" class="form-control" value="@Model.NGAYSINH.Value.ToString("d")" id="formGroupExampleInput2"disabled>
                        </div>
                    </div>
                </div>
                <div class="form-group" style="font-size: 20px">

                    <div class="form-row">
                        <div class="col">
                            <label for="formGroupExampleInput2">TÀI KHOẢN</label>
                            <input type="text" style="font-size:16px" class="form-control" value="@Model.TAIKHOAN" id="formGroupExampleInput2"disabled>
                        </div>
                        <div class="col">
                            <label for="formGroupExampleInput2">MẬT KHẨU ĐĂNG NHẬP</label>
                            <input type="text" style="font-size:16px" class="form-control" value="@Model.MATKHAU" id="formGroupExampleInput2"disabled>
                        </div>
                    </div>
                </div>
                <div class="form-row" style="font-size: 20px">
                    <div class="form-group col-md-4">
                        <label for="formGroupExampleInput2">CHỨC VỤ</label>
                        <input type="text" style="font-size:16px" class="form-control" value="@Model.CHUCVU.TEN_CV" id="formGroupExampleInput2"disabled>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="formGroupExampleInput2">NHÓM QUYỀN</label>
                        <input type="text" style="font-size:16px" class="form-control" value="@Model.NHOMQUYEN.TEN_NQ" id="formGroupExampleInput2"disabled>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="formGroupExampleInput2">NHÓM</label>
                        <input type="text" style="font-size:16px" class="form-control" value="@Model.NHOM.TEN_NH" id="formGroupExampleInput2"disabled>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

