@using Website_KĐCLGD.Models;
@{
    ViewBag.Title = "Edit_PhanCong";
    Layout = "~/Views/shared/layout_web.cshtml";
    PHANCONG_BC_TV itempc = (PHANCONG_BC_TV)ViewData["data"];
    List<NHANSU> lstNhanSu = (List<NHANSU>)ViewData["lstNhanSu"];
}

<div class="section-4" style="background:#eee">
        <div id="panner" class="carousel slide" data-ride="carousel">

          @{Html.RenderPartial("~/Views/slider/panner_header.cshtml");}
  
        </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                @{Html.RenderPartial("~/Views/partital/MenuChucNang.cshtml");}
                <br>
            </div>
        </div>
        <div class="row ">
          
            <div class="container" >
                  
    
                    @using (Html.BeginForm("Edit_PhanCong", "Website_KĐCLGD", FormMethod.Post))
                    {
                        
                             <fieldset>
                            <div class="heading wow pulse" >
			                    <h2>PHÂN CÔNG BÁO CÁO</h2>
		                    </div>

                                 <legend></legend>
                                 <div class="form-group">
                                    @*<label>MÃ TIÊU CHUẨN</label>*@
                                    <input type="hidden" class="form-control" value="@itempc.MAPHANCONG_TV" name="MAPHANCONG" />
                                </div>
                                 <div class="form-group">
                                     <div class="form-group col-md-4">
                                         <label for="uname" style="font-size:15px">NHÂN SỰ</label>
                                            <div class="dropdown" style="font-size:15px">
                                  
                                              <select name="selectionNhanSu" >
                                      
                                                  @{
                                                    foreach (NHANSU item in lstNhanSu)
                                                    { 
                                                            <option value= "@item.MA_NS">@item.TEN_NS</option>
                                                    }
                                                      }
                                            </select>
                                        </div>
                                     </div>
                                 </div>
                                
                                 <div class="form-group">
                                    <label for="uname" style="font-size:15px">NỘI DUNG CÔNG VIỆC</label>
                                    <select name="selectionNoiDung" class="form-control">
                                        <option value="PHẦN 1" selected disabled="disabled" style="background-color:#e5e0e0">PHẦN 1.KHÁI QUÁT</option>
                                        <option value="PHẦN 2 kdsjkfjwkejkdfjksjks">kdsjkfjwkejkdfjksjks</option>
                                        <option value="PHẦN 2 ahsdjkawjkdjkaw">kdsjkfjwkejkdfjksjks</option>
                                        <option value="PHẦN 3" disabled="disabled" style="background-color:#e5e0e0">PHẦN 2.TỰ ĐÁNH GIÁ THEO CÁC TIÊU CHUẨN, TIÊU CHÍ</option>
                                        <option value="PHẦN 4">PHẦN 4</option>
                                        <option value="PHẦN 5">PHẦN 5</option> 
                                        <option value="PHẦN 3" disabled="disabled" style="background-color:#e5e0e0">PHẦN 2.TỰ ĐÁNH GIÁ THEO CÁC TIÊU CHUẨN, TIÊU CHÍ</option>
                                        <option value="PHẦN 3" disabled="disabled" style="background-color:#e5e0e0">PHẦN 2.TỰ ĐÁNH GIÁ THEO CÁC TIÊU CHUẨN, TIÊU CHÍ</option>
                                      </select>
                                </div>
                                 
                                 <div class="form-group">
                                  <label for="uname" style="font-size:15px">NGÀY SINH</label>
                                     @Html.TextBox("NGAYPHANCONG",itempc.NGAYPHANCONG, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                                </div>
                                
                                 <div class="form-group">
                                   <label for="uname" style="font-size:15px">NGÀY SINH</label>
                                     @Html.TextBox("THOIHAN",itempc.THOIHAN, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                                </div>
                                
                                
                                 
                            <div>
                                <p>
                                    <button type="submit" class="btn btn-primary" style="font-size:15px;">Lưu</button>
                                </p>
                            </div>
                            
                        
                    
                        </fieldset>
                    }
    
                    <div>
                        @Html.ActionLink("Back to List", "PhanCong_Nhom")
                    </div>

            </div>
        </div>

    </div>
    
</div>
