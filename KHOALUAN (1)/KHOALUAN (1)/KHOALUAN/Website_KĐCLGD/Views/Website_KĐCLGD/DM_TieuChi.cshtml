@model IEnumerable<Website_KĐCLGD.Models.VW_TIEUCHI_TIEUCHUAN>
@{
    ViewBag.Title = "DM_TieuChi";
    Layout = "~/Views/shared/layout_web.cshtml";
}

<div class="section-4" style="background:#eee">
    <div id="panner" class="carousel slide" data-ride="carousel">
         @{Html.RenderPartial("~/Views/slider/panner_header.cshtml");}
    </div>
    <div class="container">
        <div class="row ">
             <div class="col-md-3" >
                @{Html.RenderPartial("~/Views/partital/Menu_BC.cshtml");}
            </div>
            <div class="col-md-9" >
                <div class="heading wow pulse" data-wow-duration="2.0s" style="margin-bottom: -1rem;margin-top: 1rem;">
			        <h2 style="font-weight:700">DANH MỤC TIÊU CHÍ</h2>
		        </div>
        <table class="table table-striped "style="font-size:15px">
            <thead class="table-dark" style="font-weight:600">
                <tr>
                    <td style="vertical-align: middle;">STT</td>
                    <td style="vertical-align: middle; width:85%">TIÊU ĐỀ</td>
                    <td style="vertical-align: middle;">XEM MC</td>
                </tr>
            </thead>
            <tbody>
                @{
                    var index = 1;
                    foreach (var item in Model)
                    { 
                    <tr>
                        <td>@index</td>
                        <td>
                            <div class="btn-xem"> <div style="cursor:pointer;" onclick="document.getElementById('@item.MATIEUCHI').style.display='block'"> @item.TIEUDETIEUCHI</div>
                              <div id="@item.MATIEUCHI" class="modal">
                                  <div class="modal-content">
                                      <span onclick="document.getElementById('@item.MATIEUCHI').style.display='none'" class="close" title="Đóng">×</span>
                                      <div style="background-color:#f1f1f1; position: absolute; left:0; right: 0; transform:translateY(-10%);">
                                          <iframe src="@item.DUONGDAN_ND"  width="100%" height="480"></iframe>
                                      </div>
                                  </div>
                              </div>
                          </div>
                        </td>
                        <td><button type="button" class="btn btn-info"><a href="@Url.Action("TieuChuanTieuChiMinhChung", "Website_KĐCLGD", new { matieuchi = @item.MATIEUCHI })" style="color:#fff; text-decoration:none">Xem</a></button></td>
                    </tr>
                        index++;
                    }   
                }
            </tbody>
        </table>
                <p style="font-family:'Times New Roman';font-size:18px"><br />* Download file 
                    <a href="https://drive.google.com/u/0/uc?id=18W7vjTgr8dFgnrSWZS9Ob71fUvquotwq&export=download" download="" class="fa fa-download">tại đây.</a>
                </p>
                <div id="fb-root"></div>
                <script async defer crossorigin="anonymous" src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v9.0" nonce="ienWriVo"></script>
                <div id="comment_fb">
                    <div class="fb-comments" data-href="https://vn.fifaaddict.com/fo4db/pidblkyjnvb" data-width="800" data-numposts="5" style="margin-top:100px;"></div>
                </div>
            </div>
        </div>
    </div>
    
</div>