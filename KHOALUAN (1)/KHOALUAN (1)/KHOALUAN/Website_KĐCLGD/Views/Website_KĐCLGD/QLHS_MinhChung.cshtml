@using Website_KĐCLGD.Models;
@model IEnumerable<Website_KĐCLGD.Models.VW_TIEUCHI_MINHCHUNG>
@{
    ViewBag.Title = "QLHS_MinhChung";
    Layout = "~/Views/shared/layout_web.cshtml";
}


<div class="section-4" style="background:#eee">
    <div id="panner" class="carousel slide" data-ride="carousel">
         @{Html.RenderPartial("~/Views/slider/panner_header.cshtml");}
    </div>
    <div class="container">
        <div class="row ">
            <div class="col-lg-12">
                @{Html.RenderPartial("~/Views/partital/MenuChucNang.cshtml");}
                <br>
            </div>
        </div>
        <div class="row ">
             <div class="col-md-3" >
                @{Html.RenderPartial("~/Views/partital/MenuBC(4phan).cshtml");}
            </div>
            <div class="col-md-9" >
                @{Html.RenderPartial("~/Views/partital/ComboBox_QLHS.cshtml");}
                <div class="heading wow pulse" style="margin-bottom: -1rem;margin-top: 1rem;">
			        <h2 style="font-weight:700">QUẢN LÝ HỒ SƠ PHẦN 2</h2><br />
                    <h3 style="font-weight:600;margin-bottom: 16px;margin-top: -32px;">(DANH MỤC MINH CHỨNG)</h3>
		        </div>
                    
                <tr>
                    <td>@Html.ActionLink("Thêm mới", "Create_MinhChung", "Website_KĐCLGD", new { matieuchi = ViewBag.matieuchi }, new { @class = "btn btn-primary" })</td>  
                </tr>
        <table class="table table-striped "style="font-size:15px">
            <thead class="table-dark" style="font-weight:600">
                <tr>
                    <td>STT</td>
                    <td>TIÊU ĐỀ</td>
                    <td>XÓA</td>
                </tr>
            </thead>
            <tbody>
                @{
                    var index = 1;
                    foreach (var item in Model)
                    { 
                    <tr>
                        <td>@index</td>
                        <td>
                            <div class="btn-xem"> <div style="cursor:pointer;" onclick="document.getElementById('@item.MAMINHCHUNG').style.display='block'"> @item.TENMINHCHUNG</div>
                              <div id="@item.MAMINHCHUNG" class="modal">
                                  <div class="modal-content">
                                      <span onclick="document.getElementById('@item.MAMINHCHUNG').style.display='none'" class="close" title="Đóng">×</span>
                                      <div style="background-color:#f1f1f1; position: absolute; left:0; right: 0; transform:translateY(-10%);">
                                          <iframe src="@item.DUONGDAN_ND"  width="100%" height="480"></iframe>
                                      </div>
                                  </div>
                              </div>
                          </div>
                        </td>
                        <td><button type="button" class="btn btn-danger"><a href="@Url.Action("Delete_MinhChung", "Website_KĐCLGD", new { mamc = @item.MAMINHCHUNG })" style="color:#fff;text-decoration: none">Xóa</a></button></td>
                    </tr>
                        index++;
                    }   
                }
            </tbody>
        </table>
            </div>
        </div>
    </div>
    
</div>
<script>
    function tai_lai_trang() {
        location.reload();
    }
</script>

