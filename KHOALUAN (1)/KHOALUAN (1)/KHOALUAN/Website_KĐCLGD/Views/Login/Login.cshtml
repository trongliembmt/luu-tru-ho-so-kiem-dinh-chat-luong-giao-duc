<style>
        body {
            color: #fff;
            background: #b5b5b5;
        }

        .form-control {
            min-height: 41px;
            background: #fff;
            box-shadow: none !important;
            border-color: #e3e3e3;
        }

            .form-control:focus {
                border-color: #70c5c0;
            }

        .form-control, .btn {
            border-radius: 2px;
        }

        .login-form {
            width: 100%;
            height:100%;
            padding:90px 0 0 440px;
        }
            .login-form::before {
                content: "";
            display: block;
            position: absolute;
            z-index: -1;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            background-color: rgba(255,255,255,0.6);
                    }
            .login-form form {
                width: 400px;
                height:400px;
                border-radius: 20px;
                overflow: hidden;
                padding: 55px 55px 37px 55px;
                background: -webkit-linear-gradient(top, #7579ff, #b224ef);
            }

            .login-form h2 {
                font-size: 22px;
                margin: 35px 0 25px;
            }

            .login-form .avatar {
                position: absolute;
                margin: 0 auto;
                left: 0;
                right: 0;
                top: -50px;
                width: 95px;
                height: 95px;
                border-radius: 50%;
                z-index: 9;
                background: #70c5c0;
                padding: 15px;
                box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.1);
            }

                .login-form .avatar img {
                    width: 100%;
                }

            .login-form input[type="checkbox"] {
                margin-top: 2px;
            }

            .login-form .btn {
                font-family: Poppins-Medium;
                font-size: 16px;
                color: #555555;
                width:15%;
                margin-left:80px;
                min-width: 120px;
                height: 50px;
                border-radius: 25px;
                border:none;
                background: #9152f8;
                background: -webkit-linear-gradient(bottom, #7579ff, #b224ef);
                position: relative;
                z-index: 1;

                -webkit-transition: all 0.4s;
                -o-transition: all 0.4s;
                -moz-transition: all 0.4s;
                transition: all 0.4s;
                }
                .login-form .btn::before {
                    content: "";
                    display: block;
                    position: absolute;
                    z-index: -1;
                    width: 100%;
                    height: 100%;
                    border-radius: 25px;
                    background-color: #fff;
                    top: 0;
                    left: 0;
                    opacity: 1;

                    -webkit-transition: all 0.4s;
                    -o-transition: all 0.4s;
                    -moz-transition: all 0.4s;
                    transition: all 0.4s;
                }

                .login-form .btn:hover {
                    color: #fff;
                }

                .login-form .btn:hover:before {
                    opacity: 0;
                }
                .login-form a {
                    color: #fff;
                    text-decoration: underline;
                }

                .login-form a:hover {
                    text-decoration: none;
                }

                .login-form form a {
                    color: #fff;
                    text-decoration: none;
                }

                .login-form form a:hover {
                    text-decoration: underline;
                }
                

</style>

<div class="login-form">
        <form method="post" style="position: absolute; top: 50%; left: 50%;transform: translate(-50%, -50%);">
            @Html.AntiForgeryToken()
            <h2 class="text-center" style="font-size:35px; font-weight:bold; margin-top:15px;">ĐĂNG NHẬP</h2>
            <div class="form-group">
                <input type="text" class="form-control" name="username" placeholder="Tài khoản" required="required">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="Mật khẩu" required="required">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg btn-block" style="outline: none;">Đăng nhập</button>

            </div>
            <div class="clearfix" style="margin-top:40px;">
                <label class="pull-left checkbox-inline"><input type="checkbox"> Nhớ tài khoản</label>
                <a href="#" class="pull-right">Quên tài khoản?</a>
            </div>
        </form>
        @Html.Raw(ViewBag.error)
    </div>
